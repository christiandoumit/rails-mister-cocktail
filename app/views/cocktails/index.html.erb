
<p class="text-right mt-1 mr-2"><%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-ghost" %></p>

<div class="container">
  <h1 class="text-center"><strong>THE AVAILABLE COCKTAILS</strong></h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
 </div>

</div>
